while True:
  try:
    num = int(input('Введите положительное целое число: '))
#вводим число, если больше нуля - молодец, если меньше -заново, ValueError, что пихаем в число.
    if num > 0:
      print ("Молодец!")
      break
    else:
      print('Пожалуйста, введите положительное число.')
  except ValueError:
    print('Ошибка! Введите целое число. ')
